package com.example.backend.Controller;

import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import com.example.backend.Repo.DocumentRepository;
import com.example.backend.Service.DocumentService;

@RestController
@RequestMapping("/document")
@CrossOrigin(origins = {"http://localhost:5173", "http://localhost:3000"})
public class DocumentController {

    private final Repo.DocumentRepository documentRepository;
	
	private  DocumentService repository;
	public DocumentController(DocumentService documentService, Repo.DocumentRepository documentRepository) {
		this.documentRepository = documentRepository;
	}
}
